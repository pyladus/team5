<core:View controllerName="Refugee_Book.view.MyProfile" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="bg" id="homePage" navButtonPress="onNavButtonPress" showNavButton="true" title="Future Car Trends - Decisionator">
		<content>
			<Panel>
								<Switch type="AcceptReject" state="true">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch> <Image src="img/facebookRound.png" width="100px"/>
						<Switch type="AcceptReject" state="true">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch> <Image src="img/flickrRound.png" width="100px"/>

			</Panel>
			
						<!--<l:Grid class="sapUiSmallMarginTop" hSpacing="2" defaultSpan="L6 M6 S10">-->
			<Table id="idProductsTable" inset="false" items="{ path: '/ProductCollection', sorter: { path: 'Name' } }">
				<headerToolbar>
					<Toolbar>
						<Title level="H2" text="Products"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Image"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="Name"/>
					</Column>
					<Column class="DecriptonTable" demandPopin="true" hAlign="Right" minScreenWidth="Tablet">
						<Text text="Decripton"/>
					</Column>
					<Column demandPopin="true" hAlign="Center" minScreenWidth="Tablet">
						<Text  class="WeightMeasureTable" text="Estimated Usage"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Image src="{ProductPicUrl}" width="100px"/>
							<ObjectIdentifier title="{Name}"/>
							<Text class="DecriptonTable" text="{Description}"/>
							<Text class="WeightMeasureTable" text="{WeightMeasure}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</core:View>