<core:View controllerName="Refugee_Book.view.MyProfile" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page id="homePage" navButtonPress="onNavButtonPress" showNavButton="true" title="Future Car Trends - Decisionator" class="bg">
		<content>
		
		<SearchField width="95%" class="sapUiMediumMargin"  />

			<!--<Image class="img" densityAware="false" src="./img/refugee_book.png" width="30%">-->
			<!--	<layoutData>-->
			<!--		<FlexItemData growFactor="1"/>-->
			<!--	</layoutData>-->
			<!--</Image>-->
		
	<Panel expandable="true" expanded="false" headerText="Last Customer Group" width="auto" class="sapUiResponsiveMargin">
		<content>
			<!--<l:Grid class="sapUiSmallMarginTop" hSpacing="2" defaultSpan="L6 M6 S10">-->
					
					
						<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<Toolbar>
				<Title text="Products" level="H2"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="Product" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Supplier" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Right">
				<Text text="Dimensions" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="Center">
				<Text text="Weight" />
			</Column>
			<Column
				hAlign="Right">
				<Text text="Price" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Image src="{ProductPicUrl}"/>
					<ObjectIdentifier
						title="{Name}"/>
					<Text
						text="{Description}" />
					<Text
						text="{WeightMeasure}" />
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
					
					
		</content>
	</Page>
</core:View>